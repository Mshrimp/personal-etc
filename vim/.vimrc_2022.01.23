set nu
set ff=unix
set hlsearch
set incsearch
set helplang=cn
set encoding=utf-8
set tabstop=4
set shiftwidth=4
set autoindent
set cindent

map <c-]> g<c-]>
map <F6> :<ESC>g<c-]>

"set tags+=~/tool/linux-4.14.172/tags
